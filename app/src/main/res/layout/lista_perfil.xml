<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/Prof"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/manicure"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tipoProfi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manicure Profissional"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/Prof"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/descricaoProf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sou manicure e pedicure ha 10 anos. Trabalho em domicilio."
        android:textSize="18sp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/tipoProfi"
        app:layout_constraintStart_toEndOf="@id/Prof"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/orcProfi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faça um orçamento"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/descricaoProf"
        app:layout_constraintStart_toEndOf="@id/Prof"/>



</androidx.constraintlayout.widget.ConstraintLayout>